<div class="panel-heading"><h4 style="margin-top:-3px;margin-bottom:-3px">Cerca {{ seleccio }}</h4></div>
<div class="panel-body">
<form action="{{ path('documents_cercar', { 'seleccio': seleccio }) }}" method="post">
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-10">
			<h5>Número de classificació</h5>
			<div class="input-group">
				<span class="input-group-addon"><i class="icon-archive"></i></span>
				<input type="text" class="form-control search-query" name="nodac" value="{{ nodac }}">
			</div>
			<div class="space10"></div>
			<h5>Data</h5>
			<div class="input-group">
				<span class="input-group-addon"><i class="icon-calendar"></i></span>
				<input type="text" class="form-control search-query" name="data" value="{{ data }}">
			</div>
			<div class="space10"></div>
       	</div>
       	
       	<div class="col-lg-6 col-md-6 col-sm-6 col-xs-10">
        	<h5>Paraula clau</h5>
			<div class="input-group">
				<span class="input-group-addon"><i class="icon-flag"></i></span>
				<input type="text" class="form-control search-query" name="paraula" value="{{ paraula }}">
			</div>
			<div class="space10"></div>
       	</div>
    	<div class="space10"></div>
    </div>
	<div class="space10"></div>
	<div class="btn-group">
		<button type="submit" class="btn btn-primary"><i class="icon-search"></i>&nbsp;{{ 'fons.cerca.buscar' | trans }}</button>
	</div>
	{% if is_granted('ROLE_ADMIN') %}         
		<div class="btn-group">	
			<a data-toggle="modal" href="{{ path('documents_nou', { 'seleccio':seleccio }) }}" data-target="#nouDocuments" class="btn btn-success" type="button"><i class="icon-plus"></i>&nbsp;Afegir nou</a>
	    </div>
	{% endif %}
</div>
</form>