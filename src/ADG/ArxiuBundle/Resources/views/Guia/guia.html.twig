{% extends 'ArxiuBundle::base-arxiu.html.twig' %}

{% block title %}Classificació{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}


{% block javascripts %}
	{{ parent() }}
{% endblock %}



{% block body %}

	<div class="page-header">
        <h1>Classificació de l'arxiu</h1>
	</div>

<div class="row" style="margin-left:0px">	
	<div class="col-xs-8 col-sm-10 col-md-8 col-lg-6 well">
    	<h4>Continguts:</h4>
    	current id: {{ currentId }}
    	
    	<div class="list-group">
			{% for f in allFons %}
				{% if currentId starts with f.nivell %}
					<a href="{{ path('fons', { 'fons': f.nivell }) }}" class="list-group-item">
						<i class="icon-folder-open"></i>
						{{ f.nivell }} {{ f.titol }}
					</a>
					
					<div class="list-group" style="margin-left: 15px;">
						{% for sf in subFons %}
							{% if currentId starts with sf.nivell %}
								<a href="{{ path('sub',{ 'selSub': sf.nivell }) }}" class="list-group-item">
									<i class="icon-folder-open"></i>
									{{ sf.nivell }} {{ sf.titol }}
								</a>
								blabla
								
								
							{% else %}
								<a href="{{ path('sub', { 'selSub': sf.nivell }) }}" class="list-group-item">
									<i class="icon-folder-close"></i>
									{{ sf.nivell }} {{ sf.titol }}
								</a>
							{% endif %}
						{% endfor %}
					</div><!-- /.subFons --> 
					
				{% else %}
					<a href="{{ path('fons', { 'fons': f.nivell }) }}" class="list-group-item">
						<i class="icon-folder-close"></i>
						{{ f.nivell }} {{ f.titol }}
					</a>
				{% endif %}
			{% endfor %}
		</div><!-- /.Fons --> 
	</div>
</div>
	
	

{% endblock %}
