    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title text-danger">Eliminar -
	      		{% if seleccio is sameas('carlemany') %} Cartoral de Carlemany
	      		{% elseif seleccio is sameas('organya') %} Organyà
	      		{% elseif seleccio is sameas('volabertran') %} Vilabertran
	      		{% elseif seleccio is sameas('diplomatari') %} Diplomatari de Sant Feliu
	      		{% elseif seleccio is sameas('rubriques') %} Rubriques vermelles
	      		{% elseif seleccio is sameas('roses') %} Roses	
	      		{% endif %}
          </h4>
        </div>
      <form action="{{ path("documents_eliminar_confirmar") }}" method="post">
	      	<div class="modal-body"> 
	      		<strong class="text-danger">S'eliminarà l'entrada amb la següent informació:</strong>
	      		
	      		<input type="hidden" name="id" value="{{ info.codiDoc }}">
	      		<input type="hidden" name="inputSeleccio" value="{{ seleccio }}">
				<h5 style="color: #d9534f">Classificació de l'arxiu</h5><p>{{ info.nodac }}</p>
				<h5 style="color: #d9534f">Referència</h5><p>{{ info.referencia }}</p>
				<h5 style="color: #d9534f">Data</h5><p>{{ info.data }}</p>
				<h5 style="color: #d9534f">Descripció</h5><p>{{ info.descripcio }}</p>
				<h5 style="color: #d9534f">Texte</h5><p>{{ info.texte }}</p>
			 		
	        </div>
	        <div class="modal-footer">
	          <button class="btn btn-default" data-dismiss="modal">Tancar</button>
	          <button class="btn btn-danger" type="submit"><i class="icon-remove"></i>&nbsp;Eliminar</button>
	        </div>
		</form><!-- /.form -->
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->