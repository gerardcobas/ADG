{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - Noticies {{ 'views.new.creation'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}


    <div class="page-header">
       <h1>Noticies {{ 'views.new.creation'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</h1>
    </div>

<form role="form" class="well" action="{{ path('noticies_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}

        <a type="submit" class="btn btn-success">{{ 'views.new.create'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</a>

</form>

<div>

        <a class="btn btn-default" href="{{ path('noticies') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>

</div>
{% endblock %}