{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - Noticies {{ 'views.show.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

    <div class="page-header">
        <h1>Noticies</h1>
    </div>


<form role="form" class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Data</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.data|date('Y-m-d H:i:s') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Titol</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.titol }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Contingut</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.contingut }}</span>            </div>
        </div>    </fieldset>
</form>

<div>

        <a class="btn btn-default" href="{{ path('noticies') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>


        <button class="btn btn-primary" href="{{ path('noticies_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </button>


        <form role="form" action="{{ path('noticies_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
</div>
{% endblock %}