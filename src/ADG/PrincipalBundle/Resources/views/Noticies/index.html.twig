{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - Noticies {{ 'views.index.list'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}



    <div class="page-header">
        <h1>Noticies {{ 'views.index.list'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</h1>
    </div>
<div class="row">
    <div class="col-md-8 col-md-offset-3">
        {% if form_errors(filterForm) %}
        <div class="alert alert-block alert-error alert-dismissable">
        	<a type="button" class="close" data-dismiss="alert" aria-hidden="true"> &times;</a>
            {{ form_errors(filterForm) }}
        </div>
        {% endif %}
        &nbsp;
    </div>
</div>    
    
<div class="row">
    <div class="col-md-6">
    	<div class="btn-group dropdown">
            <button class="btn btn-primary dropdown-toggle" data-toggle="collapse" data-target="#filters">
            	<i class="icon-cog"></i>            	
                {{ 'views.index.filters'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                <span class="caret"></span>
            </button>
            
							    <a class="btn btn-primary" href="{{ path('noticies_new') }}">
				    <i class="icon-plus"></i>    
				            {{ 'views.index.createnew'|trans({}, 'JordiLlonchCrudGeneratorBundle') }} Noticies
				    </a>
			            
        </div>
    </div>
</div>
<div clas="space10"></div>
<div class="row">
    <div class="col-md-8">
        <div id="filters" class="collapse">
            <form role="form" class="well" action="{{ path('noticies') }}" method="post" {{ form_enctype(filterForm) }}>
                {{ form_row(filterForm.id) }}
                {{ form_row(filterForm.data) }}
                {{ form_row(filterForm.titol) }}
                {{ form_row(filterForm.contingut) }}
                {{ form_rest(filterForm) }}

                <div class="btn-group">
                    <button class="btn btn-danger" type="submit" name="filter_action" value="reset">{{ 'views.index.reset'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                    <button class="btn btn-success" type="submit" name="filter_action" value="filter">{{ 'views.index.filter'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                </div>
            </form>
        </div>
    </div>
</div>
    
<div class="row">
    <div class="col-lg-12">

    <table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Data</th>
            <th>Titol</th>
            <th>Contingut</th>
            <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('noticies_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.data %}{{ entity.data|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.titol }}</td>
            <td>{{ entity.contingut }}</td>
            <td>
        <a class="btn btn-default btn-sm" href="{{ path('noticies_show', { 'id': entity.id }) }}">
            {{ 'views.actions.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
        <a class="btn btn-default btn-sm" href="{{ path('noticies_edit', { 'id': entity.id }) }}">
            {{ 'views.actions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
    {{ pagerHtml|raw }}
    </div>
</div>

{% endblock %}