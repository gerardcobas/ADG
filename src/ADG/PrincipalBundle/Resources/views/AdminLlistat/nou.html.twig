    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Afegir nou - {{ tipus }}</h4>
        </div>
      <form action="{{ path("llistat_nou_confirmar") }}" method="post">
	      	<div class="modal-body"> 
	      		<p>Cal afegir la següent informació:</p>
	      		<div class="space10"></div>
	      		
	      		<div class="input-group">
			  		<span style="margin-right: 10px;font-weight:500;font-size:14px;">S'afegirà:</span>
			  		<span class="radio-inline">
			        	<input type="radio" name="tipus" id="tipus2" value="persona" {% if tipus is sameas('persona') %}checked{% endif %}>Persona
			      	</span>	
			    	<span class="radio-inline">
			        	<input type="radio" name="tipus" id="tipus1" value="lloc" {% if tipus is sameas('lloc') %}checked{% endif %}>Localitat
			      	</span>
			    </div><!-- /radio-group -->
      			<div class="space10"></div>
      			
	      		<div class="input-group">
						<span class="input-group-addon">Classificació de l'arxiu</span>
						<input type="text" class="form-control" pattern="^([a-zA-Z0-9]*\.)*$" name="inputNodac" 
					title="Només pot tenir números i/o lletres i finalitzar amb un punt." required>
				</div><div class="space10"></div>
	      		<div class="input-group">
						<span class="input-group-addon">Nom de {{ tipus }}</span>
						<input type="text" class="form-control" name="inputNom" required>
				</div><div class="space10"></div>
							
	        </div>
	        
	        <div class="modal-footer">
	          <button class="btn btn-default" data-dismiss="modal">Tancar</button>
	          <button class="btn btn-success" type="submit"><i class="icon-plus"></i>&nbsp;Afegir</button>
	        </div>
		</form><!-- /.form -->
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->