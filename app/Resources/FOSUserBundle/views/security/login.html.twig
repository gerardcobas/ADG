{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Autentificació{% endblock %}

{% block fos_user_content %}

	<div class="page-header">
        <h1>Autentificació</h1>
	</div>
    
	<div class="row">
      <form class="form-signin marginleft" action="{{ path("fos_user_security_check") }}" method="post">
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        
        <label for="username">Nom d'usuari</label>
        <input type="text" class="form-control" id="username" name="_username" required="required" autofocus>
        <div class="space10"></div>
        <label for="password">Contrasenya</label>
        <input type="password" class="form-control" id="password" name="_password" required="required" >
        
        <label class="checkbox">
        	<input type="checkbox" value="remember-me" id="remember_me" name="_remember_me">Recordar
        </label>
        <button class="btn btn-lg btn-primary btn-block" id="_submit" name="_submit" type="submit">Entrar</button>
        
        {% if error %}
	    	<div class="space10"></div>
	        <div class="alert alert-danger">
	          <button type="button" class="close" data-dismiss="alert">×</button>
	          <h4>Error!</h4>
	          {{ error | trans }}
	        </div>
         {% endif %}
      </form>    
	</div>

{% endblock fos_user_content %}
